<UserControl x:Class="AsyncApp.View.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsyncApp.View"
             xmlns:viewModel="clr-namespace:AsyncApp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1200" FontSize="8px">

    <UserControl.DataContext>
        <viewModel:EmployeesViewModel/>
    </UserControl.DataContext>
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="dataView">
        <DataGrid ItemsSource="{Binding Path=Employees}" Background="#3f3fc3">
            
        </DataGrid>
    </Grid>
</UserControl>
